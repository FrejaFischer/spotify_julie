<style>
  article {
    flex-direction: column;
    background-color: rgb(22, 22, 22);
    width: 100%;
    position: fixed;
  }

  .left_arrow {
    margin-right: 4%;
  }

  p {
    display: inline;
    color: rgb(208, 208, 208);
    font-size: 3rem;
    margin: 0;
  }
  button {
    border-radius: 25px;
    padding: 1% 2.2% 1% 2.2%;
    font-weight: 600;
    font-size: 90%;
    border: none;
    margin: 1%;
  }
  div {
    display: inline;
  }
  .div_1 {
    position: relative;
    left: 3%;
  }

  .div_2 {
    position: relative;
    left: 52%;
  }
  button:first-child {
    background-color: rgb(22, 22, 22);
    color: rgb(208, 208, 208);
    margin-right: 0;
  }

  button:last-child {
    margin-left: 0;
  }

  input {
    width: 100px;
    border-style: none;
  }
  #searchbar {
    padding: 10px;
    background-color: white;
    border-radius: 20px;
  }
  #searchbar img {
    justify-self: center;
  }
</style>
